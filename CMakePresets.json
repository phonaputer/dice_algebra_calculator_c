{
    "version": 8,
    "configurePresets": [
        {
            "name": "debug-clang",
            "displayName": "Debug with Clang",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_FLAGS_INIT": "-DDEBUG -Wall -Wextra -Wpedantic -Werror -fsanitize=address,undefined",
                "CMAKE_C_CLANG_TIDY": "clang-tidy",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug-gcc",
            "displayName": "Debug with GCC",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_FLAGS_INIT": "-DDEBUG -pedantic -Wall -Wextra -Wno-unused-variable",
                "CMAKE_C_CLANG_TIDY": "clang-tidy",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        }
    ]
}
